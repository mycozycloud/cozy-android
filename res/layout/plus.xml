<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/nameNewNote"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Nom de la note"
        android:text="@string/nameNewNote" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="2" />

    <HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/clear"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dip"
                android:scaleType="centerCrop"
                android:src="@drawable/clear" />

            <ImageButton
                android:id="@+id/save"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="5dip"
                android:scaleType="centerCrop"
                android:src="@drawable/save" />

            <ImageButton
                android:id="@+id/indent"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="5dip"
                android:scaleType="centerCrop"
                android:src="@drawable/indent" />

            <ImageButton
                android:id="@+id/unindent"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="5dip"
                android:scaleType="centerCrop"
                android:src="@drawable/unindent" />
            <ImageButton
                android:id="@+id/listBullets"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="5dip"
                android:scaleType="centerCrop"
                android:src="@drawable/list_bullets" />
            <ImageButton
                android:id="@+id/listNum"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="5dip"
                android:scaleType="centerCrop"
                android:src="@drawable/list_num" />
            </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>